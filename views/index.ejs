<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link
            rel="stylesheet"
            href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
            integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
            crossorigin="anonymous"
        />
        <title>Document</title>
    </head>
    <body>
        <div class="container">
            <h1>URL Shrinker</h1>
            <form action="/shortUrls" method="POST" class="my-4" form-inline>
                <label for="fullUrl" class="sr-only">URL</label>
                <input
                    type="url"
                    name="fullUrl"
                    id="fullUrl"
                    placeholder="URL"
                    required
                    class="form-control col mr-2"
                />
                <label for="comment" class="sr-only">Comment</label>
                <input
                    type="text"
                    name="comment"
                    id="comment"
                    placeholder="Comment"
                    class="form-control col mr-2"
                />
                <button type="submit" class="btn btn-success">Shrink</button>
            </form>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Full URL</th>
                        <th>Short URL</th>
                        <th>Short URL</th>
                        <th>Short Path</th>
                        <th>Clicks</th>
                        <th>Comments</th>

                    </tr>
                </thead>
                <tbody>
                    <% shortUrls.forEach( shortUrl =>{ %>

                    <tr>
                        <td>
                            <a href="<%= shortUrl.full %>" ><%= shortUrl.full %></a>
                        </td>
                        <td><a href="http://localhost:8080/<%= shortUrl.short %>" target="_blank">http://localhost:8080/<%= shortUrl.short %></a></td>
                        <td><a href="https://inst.my/<%= shortUrl.short %>" target="_blank">https://inst.my/<%= shortUrl.short %></a></td>
                        <td>/<%= shortUrl.short %></td>
                        <td><%= shortUrl.clicks %></td>
                        <td><%= shortUrl.comment %></td>

                    </tr>
                    <% } ) %>
                </tbody>
            </table>
        </div>
    </body>
</html>
